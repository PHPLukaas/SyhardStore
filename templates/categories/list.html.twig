{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <h1>Liste des produits de la catégories {{ categories.name }}</h1>
        </div>
    {% for product in products.data %}
        <div class="col-3 mb-3">
            {% if product.images is not empty %}
                {% set firstImage = product.images.first() %}
                <img src="{{ asset('assets/uploads/products/mini/300-300-' ~ firstImage.name ) }}" class="card-img-top rounded-2" style="aspect-ratio: 1 / 1"/>
            {% else %}
                <img src="https://placehold.co/300x300" class="card-img-top rounded-2" style="aspect-ratio: 1 / 1"/>
            {% endif %}
            <div class="card h-100">
                <h2 class="card-title">{{ product.name }}</h2>
                <p class="card-texte">{{ product.description }}</p>
                <a href="{{ path('produits_detail', {'slug': product.slug }) }}" class="btn btn-primary">Voir le détails</a>

            </div>
        </div>

    {% endfor %}
        {% set path = 'categories_list' %}
        {% set slug = categories.slug %}
        {% set pages = products.pages %}
        {% set currentPage = products.page %}
        {% include '_partials/_pagination.html.twig' %}

{% endblock %}