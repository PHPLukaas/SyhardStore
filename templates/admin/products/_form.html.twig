{{ form_start(productForm) }}

    {{ form_row(productForm.name) }}
    {{ form_row(productForm.description) }}
    {{ form_row(productForm.categories) }}
    {{ form_row(productForm.prix) }}
    {{ form_row(productForm.stock) }}


{% if app.request.attributes.get('_route') == 'admin_products_edit' %}
    <h2>Images</h2>
    {% for image in product.images %}
    <div>
        <img src="{{ asset('assets/uploads/products/mini/300-300-' ~ image.name) }}" alt="Image" width="150">
        <a href="{{ path('admin_products_delete_image', {id: image.id}) }}" date-delete
           date-token="{{ csrf_token('delete' ~ image.id) }}">Supprimer</a>
    </div>

   {% endfor %}
{% endif %}
{{ form_row(productForm.image) }}
<button type="submit" class="btn btn-primary">{{ button_label | default('Ajouter') }}</button>
{{ form_end(productForm) }}