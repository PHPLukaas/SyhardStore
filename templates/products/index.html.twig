{% extends "base.html.twig" %}

{% block title %} Liste des articles {% endblock %}

{% block body %}



        <div class="container">
            <div class="row">

                <main class="col-9 border border-light bg-white p-2">
                    <h1>Liste des produits</h1>
                    <table class="table">
                        <thead>
                        <tr>

                            <th>Photo</th>
                            <th>Nom</th>
                            <th>Prix</th>

                            <th>Catégorie</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for produit in produits %}
                            <tr>

                                {% if produit.images is not empty %}
                                    {% set firstImage = produit.images.first() %}
                                    <td><img src="{{ asset('assets/uploads/products/mini/300-300-' ~ firstImage.name ) }}" alt="{{ produit.name }}" class="img-thumbnail"></td>
                                {% else %}
                                    <td>Aucune image disponible</td>
                                {% endif %}


                                <td>{{ produit.name }}</td>
                                <td>{{ produit.prix }}</td>

                                <td>{{ produit.categories.name }}</td>
                                <td><a href="{{ path('produits_detail', {slug: produit.slug}) }}" class="btn btn-success">Détails</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </main>
            </div>
        </div>


{% endblock %}