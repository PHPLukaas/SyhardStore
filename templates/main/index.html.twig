{% extends 'base.html.twig' %}

{% block body %}
    <!-- intro -->
    <section class="pt-3">
        <div class="container">
            <div class="row gx-3">
                <main class="col-lg-9">
                    <div class="card-banner p-5 bg-primary rounded-5" style="height: 350px;">
                        <div style="max-width: 500px;">
                            <h2 class="text-white">
                                Nouvelle collection Syhard !<br />
                                <strong>En exclusivité</strong>
                            </h2>
                            <p class="text-white">T-shirt, tasses, coques pour téléphone, accessoires et bien plus encore! Venez découvrir notre collection</p>
                            <a href="#" class="btn btn-light shadow-0 text-primary">Découvrir la collection</a>
                        </div>
                    </div>
                </main>
                <aside class="col-lg-3">
                    <div class="card-banner h-100 rounded-5" style="background-color: #f87217;">
                        <div class="card-body text-center pb-5">
                            <h5 class="pt-5 text-white">Carte Cadeau Syhard Store</h5>
                            <p class="text-white">Offrez autour de vous pour faire plaisir. C'est le cadeau parfait !</p>
                            <a href="#" class="btn btn-outline-light"> Voir nos cartes cadeaux </a>
                        </div>
                    </div>
                </aside>
            </div>
            <!-- row //end -->
        </div>
        <!-- container end.// -->
    </section>
    <!-- intro -->

    <section>
        <div class="container pt-5">
            <header class="mb-4">
                <h3>Nos Catégories</h3>
            </header>
            <nav class="row gy-4">
                <div class="col-lg-12 col-md-12">
                    <div class="row">
                        {% for categorie in categories %}
                            {% if categorie.parent is not null %}
                            <div class="col-3">
                                <a href="{{ path('categories_list', {slug: categorie.slug}) }}" class="text-center d-flex flex-column justify-content-center">
                                    <button type="button" class="btn btn-outline-secondary mx-auto p-3 mb-2" data-mdb-ripple-color="dark">
                                        <i class="{{ categorie.icon }} fa-xl fa-fw"></i>
                                    </button>
                                    <div class="text-dark">{{ categorie.name }}</div>
                                </a>
                            </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </nav>
        </div>
    </section>



    <!-- Products -->
    <section>
        <div class="container my-5">
            <header class="mb-4">
                <h3>Nouveaux Produits</h3>
            </header>

            <div class="row">
             {% for lastP in lastProducts %}
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="card my-2 shadow-0">
                        <a href="#" class="">
                            <div class="mask" style="height: 50px;">
                                <div class="d-flex justify-content-start align-items-start h-100 m-2">
                                    <h6><span class="badge bg-danger pt-1">New</span></h6>
                                </div>
                            </div>
                            {% if lastP.images is not empty %}
                            {% set firstImage = lastP.images.first() %}
                                <img src="{{ asset('assets/uploads/products/mini/300-300-' ~ firstImage.name ) }}" class="card-img-top rounded-2" style="aspect-ratio: 1 / 1"/>
                            {% else %}
                                <img src="https://placehold.co/300x300" class="card-img-top rounded-2" style="aspect-ratio: 1 / 1"/>
                            {% endif %}
                        </a>
                        <div class="card-body p-0 pt-3">
                            <a href="{{ path('produits_detail', {'slug': lastP.slug }) }}" class="btn btn-light border px-2 pt-2 float-end icon-hover"><i class="fas fa-arrow-up-right-from-square fa-lg px-1 text-secondary"></i></a>
                            <h5 class="card-title">{{ lastP.prix }}€</h5>
                            <p class="card-text mb-0">{{ lastP.name }}</p>
                            <p class="text-muted">
                                <a href="{{ path('categories_list', {slug: lastP.categories.slug}) }}">{{ lastP.categories.name }}</a>
                            </p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <!-- Products -->

    <!-- Features -->
    <section>
        <div class="container">
            <div class="card p-4 bg-primary">
                <div class="row align-items-center">
                    <div class="col">
                        <h4 class="mb-0 text-white">Envie de jouer à LOL ?</h4>
                        <p class="mb-0 text-white-50">Ajouter Syhard sur League Of Legends dès maintenant !</p>
                    </div>
                    <div class="col-auto"><a class="btn btn-white text-primary shadow-0" href="https://blitz.gg/lol/profile/euw1/Syhard%20v2">AJOUTER SYHARD</a></div>
                </div>
            </div>
        </div>
    </section>
    <!-- Features -->
{% endblock %}

{% block title %}
Accueil
{% endblock %}

